{
  "name": "vue-portals",
  "description": "Assists in creating pages that can embed and be embedded as portal elements.",
  "version": "0.0.2",
  "author": {
    "name": "Nathan Heffley",
    "email": "nathan@nathanheffley.com"
  },
  "license": "MIT",
  "main": "./dist/vue-portals.common.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/nathanheffley/vue-portals"
  },
  "keywords": [
    "vue",
    "portal"
  ],
 "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name vue-portals ./src/components/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "files": [
    "dist/*",
    "src/*",
    "*.json",
    "*.js"
  ]
}
